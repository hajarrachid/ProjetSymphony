{% extends '::base.html.twig' %}

{% block body %}
<a class="nav-link" href="{{ path('questionnaire_ajouter',{ 'id': 0 })}}">Nouveau questionnaire</a>
    <div>
        <form action="{{ path('questionnaire_list') }}" method="get">
            <label for="filter">Titre</label>
            <input name="filter" type="text">
            <label for="filterTheme">Thematique</label>
            <select name="filterTheme">
              <option value=""></option>
              {% for theme in themes %}
                <option value="{{theme.id}}">{{theme.titre}}</option>
              {% endfor %}
            </select>

            <button type="submit" class="btn btn-default btn-sm">Filtrer</button>
        </form>
    </div>

    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th class="col-sm-1">{{ knp_pagination_sortable(blog_posts, 'id', 'bp.id') }}</th>
                <th class="col-sm-5 {% if blog_posts.isSorted('bp.thematique.titre') %}sorted{% endif %}">{{ knp_pagination_sortable(blog_posts, 'Thematique', 'bp.thematique.titre') }}</th>
                <th class="col-sm-6 {% if blog_posts.isSorted('bp.titre') %}sorted{% endif %}">{{ knp_pagination_sortable(blog_posts, 'Title', 'bp.titre') }}</th>
                <th class="col-sm-2">Options</th>
            </tr>
        </thead>
        <tbody>
            {% for post in blog_posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.thematique.titre }}</td>
                <td>{{ post.titre }}</td>
                <td>
                    <a href="{{ path('questionnaire_voir', { 'id': post.id }) }}" class="btn btn-primary btn-sm btn-block">Voir</a>
                    {% if post.publie == false %}
                      <a href="{{ path('questionnaire_ajouter',{ 'id': post.id }) }}" class="btn btn-primary btn-sm btn-block">Editer</a>
                    {% endif %}
                    <a href="{{ path('questionnaire_supprimer',{ 'id': post.id }) }}" class="btn btn-danger btn-sm btn-block">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation text-center">
        {{ knp_pagination_render(blog_posts) }}
    </div>

{% endblock %}
