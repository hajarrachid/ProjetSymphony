            </li>
          </ul>

          <!-- Align Right -->
          <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link"href="{{ path('utilisateur')}}">Paul REGIS</a>
                </li>
            </ul>
        </nav>

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
