{% extends "::base.html.twig" %}

{% block title %}Quizzly{% endblock %}
{% block stylesheets %}
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
{% endblock %}
{% block body %}
<div class="login-form">
  <h1 class="text-center">Connexion</h1>

  <form action="{{ path('login_check')}}" method="POST">
    <div class="form-group" style="width: 340px;margin: 30px auto;">
      <div class="input-group">
        <label for="email">Identifiant :</label>
        <input type="text" id="email" name="_username" value="{{last_email}}" class="form-control" required/>
      </div>
      <div class="input-group">
        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="_password" class="form-control" required/>
      </div>
      
      {% if error %}
        <div>{{error.message}}</div>
      {% endif %}

      <div class="input-group">
        <button class="btn btn-success" type="submit">Se connecter</button>
      </div>
    </div>
  </form>
</div>
{% endblock %}
